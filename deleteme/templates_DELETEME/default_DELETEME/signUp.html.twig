{% extends 'default/base.html.twig' %}


{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-6">

                <form action="{{ path_for('signUp', {}) }}" method="POST">
                    <div>
                        <label for="username"
                               class="required">Nombre de usuario de twitter</label>
                        <input type="text"
                               name="username"
                               required="required"
                               maxlength="255"
                               pattern=".{2,}"
                               class="form-control">
                    </div>

                    <br>
                    <br>

                    <div>
                        <label for="email" class="required">Email</label>
                        <input type="email"
                               name="email"
                               required="required"
                               class="form-control">
                    </div>
                    <div>
                        <label for="password" class="required">Contrase√±a</label>
                        <input
                                type="password"
                                name="password"
                                required="required"
                                class="form-control"></div>
                    <br>
                    <div>
                        <input type="submit" class="btn btn-default" value="Register">
                    </div>
                </form>
            </div>
        </div>
    </div>



{% endblock %}